<div class = "container login-page pt-4">
  <div class = "row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0">


<h2>管理者ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class = "row">
  <div class="field">
    <%= f.label :"メールアドレス", class: "mr-3 mb-5 mt-5" %>
    <%= f.email_field :email, autofocus: true,:size =>"30x10", autocomplete: "email" %>
  </div>
</div>

<div class = "row">
  <div class="field">
    <%= f.label :"パスワード" , class: "mr-5 mb-5"%>
    <%= f.password_field :password,:size =>"30x10", autocomplete: "current-password" %>
  </div>
</div>

<div class = "row">
  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-outline-info btn-sm" %>
  </div>
</div>
<% end %>

<%= render "admin/shared/links" %>
    </div>
  </div>
</div>
