<div class="container px-5 px-sm-0">
  <div class="row mt-3">
    <div class="col">
      <h2>商品新規登録</h2>
    </div>
  </div>
  <div>
    <% if @product.errors.any? %>
      <%= @product.errors.count %> 件の入力ミスがあります。
      <% @product.errors.full_messages.each do |message| %><br>
        <li><%= message %></li>
      <% end %>
    <% end %>
  </div>
  <div class="row mt-3 justify-content-center align-items-center">
    <div class="col">
      <%= form_with model: @product, url:admin_products_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :image, "商品画像",class:"col-2" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :name, "商品名",class:"col-2" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "商品説明",class:"col-2" %>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.label :genre_id, "ジャンル",class:"col-2" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
        </div>
        <div class="form-group">
          <%= f.label :price, "税抜価格",class:"col-2" %>
          <%= f.text_field :price %>
        </div>
        <div class="form-group">
          <%= f.label :is_active, "販売ステータス",class:"col-2" %>
          <%= f.radio_button :is_active, :true %><span> <%= f.label :is_active, "販売中" %> </span>
          <%= f.radio_button :is_active, :false %><span> <%= f.label :is_active, "販売停止中" %></span>
        </div>
        <div class="text-center">
          <%= f.submit "新規登録", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>