<div class="container px-5 px-sm-0">
  <div class="row">
    <h2 class="col-9">商品一覧</h2>
    <div class="col-3">
      <%= link_to new_admin_product_path, class:"btn btn-secondary mx-0" do %>
        <i class="fas fa-plus-square fa-lg"></i><span> 新規登録</span>
      <% end %>
    </div>
  </div>
  <div class="row mx-0">
    <div class="col mt-3">
      <table class="table table-sm">
        <thead>
          <tr>
            <th style="width: 10%">商品ID</th>
            <th style="width: 35%">商品名</th>
            <th style="width: 10%">税抜価格</th>
            <th style="width: 30%">ジャンル</th>
            <th style="width: 15%">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, admin_product_path(product) %></td>
            <td><%= product.price %></td>
            <td><%= product.genre.name %></td>
            <td>
              <% if product.is_active == true %>
                <p class="text-success">販売中</p>
              <% else %>
                <p class="text-secondary">販売停止中</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @products %>
  </div>
</div>