<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-8 mt3">
      <h2>ジャンル一覧・追加</h2>
      <div>
        <%= flash[:notice] %>
      </div>
      <div>
        <%= form_with model: @genre, url:admin_genres_path, local: true do |f| %>
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name %>
          <%= f.submit "新規登録", class: "btn btn-sm btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col-6">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-secondary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>