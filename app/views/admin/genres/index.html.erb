<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-8 mt-3">
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-8 mt-3">
      <div>
        <h3 class="text-success">
          <%= flash[:notice] %>
        </h3>
      </div>
      <div class="my-5">
        <%= form_with model: @genre, url:admin_genres_path, local: true do |f| %>
          <%= f.label :name, "ジャンル名", class:"mr-4" %>
          <%= f.text_field :name, class:"mr-4" %>
          <%= f.submit "新規登録", class: "btn btn-md btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class = "row justify-content-center">
    <div class = "col-5">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-secondary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>