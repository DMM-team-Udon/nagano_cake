<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col">

      <h2>配送先編集</h2>
      <%= form_with model: @shipping_address, local:true do |f| %>

       <% if @shipping_address.errors.any? %>
          <%= @shipping_address.errors.count %>件のエラーが発生しました
          <% @shipping_address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>

      <table class="table mb-4">
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= f.text_field :address, size:"80px, 50px" %></td>
        </tr>

        <tr>
          <th>宛名</th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "変更内容を保存", class: "btn btn-secondary btn-secondary-simple" %></td>
        </tr>
      </table>
      <% end %>

    </div>
  </div>
</div>