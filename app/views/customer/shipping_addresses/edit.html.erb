<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col">

      <h2>配送先編集</h2>
      <%= form_with model: @shipping_address, local:true do |f| %>
      <%= render "customer/shared/error_messages", resource: f.object %>
      <table class="mb-4">
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, size:"80px, 50px" %></td>
        </tr>

        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>

    </div>
  </div>
</div>