<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col">

      <h2>マイページ</h2>

      <div class="mb-4">
        <h4>登録情報</h4>
        <%= link_to "編集する", edit_customers_path, class:"btn btn-secondary btn-secondary-simple" %>
      </div>

      <table class="table mb-4">
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>

        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <div class="mb-4">
        <h4>配送先</h4>
        <%= link_to "一覧を見る", shipping_addresses_path, class:"btn btn-secondary btn-secondary-simple" %>
      </div>

      <h4>注文一覧</h4>
        <%= link_to "一覧を見る", orders_path, class:"btn btn-secondary btn-secondary-simple" %>
    </div>
  </div>
</div>