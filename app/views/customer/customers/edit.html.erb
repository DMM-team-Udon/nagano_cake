<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col">

      <h2>会員情報編集</h2>
      <%= form_with model: current_customer, url: customers_path, local: true do |f|%>

        <% if @customer.errors.any? %>
          <%= @customer.errors.count %>件のエラーが発生しました
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>

        <table class="mb-4">
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <td>カナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>

          <tr>
            <td>郵便番号（ハイフンなし）</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>

          <tr>
            <td>電話番号（ハイフンなし）</td>
            <td><%= f.text_field :phone_number %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email%></td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit "編集内容を保存", class:"btn btn-secondary btn-secondary-simple mt-5" %></td>
            <td><%= link_to "退会する", customers_quit_path, class:"btn btn-secondary btn-secondary-simple mt-5" %></td>
          </tr>
        </table>
      <% end %>

    </div>
  </div>
</div>