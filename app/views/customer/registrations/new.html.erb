<div class="container px-5 px-sm-0">
  <div class="row mt-5 mb-5">
    <div class="col">
      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <% if @customer.errors.any? %>
          <%= @customer.errors.count %>件のエラーが発生しました
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>

        <div class="name-group">
          <%= f.label :"名前" %><br />
          <%= f.label :last_name, "(姓)　" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", placeholder: "令和" %>
          <%= f.label :first_name, "　　(名)" %>
          <%= f.text_field :first_name, autocomplete: "given-name", placeholder: "道子" %>
        </div>

        <div class="name-group">
          <%= f.label :"フリガナ" %><br />
          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana, autocomplete: "family-name", placeholder: "レイワ" %>
          <%= f.label :first_name_kana, "　(メイ)" %>
          <%= f.text_field :first_name_kana, autocomplete: "given-name", placeholder: "ミチコ" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>

        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
          <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000" %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所" %><br />
          <%= f.text_field :address, autocomplete: "street-address", placeholder: "東京都渋谷区代々木神園町0-0", :size => 40 %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, "電話番号(ハイフンなし)" %><br />
          <%= f.text_field :phone_number, autocomplete: "tel", placeholder: "0000000000" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード(６文字以上)" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mb-4">
          <%= f.submit "新規登録", class:"btn btn-secondary btn-secondary-simple" %>
        </div>
      <% end %>

      <h5>既に登録済みの方</h5>
      <p><%= render "customer/shared/links" %>からログインしてください</p>

    </div>
  </div>
</div>
