<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-6">
    <%= attachment_image_tag @product, :image, size: "300x200", fallback: "no_image.jpg" %>
    </div>
    <div class="col-6">
      <h2><%= @product.name %></h2>
      <div><%= @product.introduction %></div>
      <div>¥<%= (@product.with_tax_price).to_s(:delimited) %><span>(税込)</span></div>
      <div>
        <% if customer_signed_in? %>
          <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
            <%= f.hidden_field :product_id, value: @product.id %>
            <%= f.hidden_field :customer_id, value: current_customer.id %>
            <%= f.select :quantity, options_for_select((1..10).to_a), placeholder: "個数選択" %>
            <%= f.submit "カートに入れる", class:"btn btn-secondary" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>