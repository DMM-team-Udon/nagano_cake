<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-10 mt-3">
    <h2>商品一覧<span>全<%= @total_products.count %>件</span></h2>
      <% @products.each do |product| %>
        <%= link_to product_path(product) do %>
          <%= attachment_image_tag(product, :image, size:"100x100", fallback:"no_image.jpg") %>
        <% end %>
        <%= link_to product.name, product_path(product) %>
        <%= "¥"+(product.add_tax).to_s(:delimited) %>
      <% end %>
      <%= paginate @products %>
    </div>
  </div>
</div>