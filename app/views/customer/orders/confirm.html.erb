<h2>注文情報確認</h2>

<!-- ボックス左側-->
<table border="2">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.product.name %></td>
      <td><%= cart_item.product.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to '削除する',cart_items_path, method: :delete,"data-confirm" => "本当に消しますか？",class:'btn btn-sm btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<!--ボックス右側-->
<table border="2">
  <tr>
    <th>送料</th><td>postage</td>
  </tr>
  <tr>
    <th>商品合計</th><td>単価(税込)</td>
  </tr>
  <tr>
    <th>請求金額</th><td>total_price</td>
  </tr>

</table>